#AQI
  header.header
    h2 Air Quality Index
    h1 空氣品質指標(AQI)- 政府資料開放平台
    .Time 載入時間：
      .Today
      .nowtime
  main.content
    .CountyRadio
      h3 區域選擇
        span （{{filter}}共有 {{CountyRadio.length}} 個監測站）
      .button-Box
        .button
          input(type="radio" name="CountyRadio" id="CountyData" checked)
          label(for="CountyData" name="CountyRadio" @click="ClickTaiwan()") 全臺灣
        .button(v-for="CountyData in AqiData.County")
          input(type="radio" name="CountyRadio" :id="CountyData")
          label(:for="CountyData" name="CountyRadio" @click="ClickCountyRadio(CountyData)") {{CountyData}}
    ul
      li(v-for="OpenData in AqiData.CountyRadio")
        .District
          .County {{OpenData.County}}
          .SiteName {{OpenData.SiteName}}
        .AQIBox
          .AQI(:class="{Good: OpenData.AQI >= 0 ,Moderate: OpenData.AQI >= 51,UnhealthyForSensitiveGroups: OpenData.AQI >= 101, Unhealthy: OpenData.AQI >= 151 , VeryUnhealthy: OpenData.AQI >= 201 , Hazardous: OpenData.AQI >= 301}") {{OpenData.AQI}}
          .Status {{OpenData.Status}}
        .DataBox
          .Item.PM25
            .DataName PM2.5
              .bar
                .bar-value(:style="'width:'+ OpenData['PM2.5']/AqiMax['PM2.5']*100 +'%'")
            .NumericalValue {{OpenData["PM2.5"]}}
              .unit μg/m
                sup 3
          .Item.PM10
            .DataName PM10
              .bar
                .bar-value(:style="'width:'+ OpenData.PM10/AqiMax.PM10*100 +'%'")
            .NumericalValue {{OpenData.PM10}}
              .unit μg/m
                sup 3
          .Item.SO2
            .DataName SO
              sub 2
              .bar
                .bar-value(:style="'width:'+ OpenData.SO2/AqiMax.SO2*100 +'%'")
            .NumericalValue {{OpenData.SO2}}
              .unit ppb
          .Item.CO
            .DataName CO 
              .bar
                .bar-value(:style="'width:'+ OpenData.CO/AqiMax.CO*100 +'%'")
            .NumericalValue {{OpenData.CO}}
              .unit ppm
          .Item.O3
            .DataName O
              sub 3
              .bar
                .bar-value(:style="'width:'+ OpenData.O3/AqiMax.O3*100 +'%'")
            .NumericalValue {{OpenData.O3}}
              .unit ppb
          .Item.NO
            .DataName NO
              sub 2 
              .bar
                .bar-value(:style="'width:'+ OpenData.NO2/AqiMax.NO2*100 +'%'")
            .NumericalValue {{OpenData.NO2}}
              .unit ppb
        .PublishTime 資料更新時間：{{OpenData.PublishTime}}
  footer#NowLocation


